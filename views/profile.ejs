<html>
<%
	var username = 'Undefined User';
	if (user.local.email) { 
		username = user.local.name;
	} else if (user.facebook.token) {
		username = user.facebook.name;
	}
%>

<h2> Welcome <%=username%> ! </h2>

<h3>Events: </h3>
<% if (user.events.length > 0) { %>
	<table> 
		<thead> <tr> 
			<th> Title </th> <th> Date </th> <th> Details </th>	
		</tr> </thead>
		<tbody>
		<% for (var e in user.events){ 
			if (user.events[e].title){	%>
			<tr>
				<td><%=user.events[e].title%></td> 	
				<td><%=user.events[e].dateAdded%></td>
				<td>TODO details</td>
			</tr>
		<% }
		} %>
		</tbody>
	</table>
<%
} else { %>
	No events yet! Add a new event below.
<%} %>

<h3>Add a new event:</h3>
<form action="/addevent" method="post">
	<label>Goal title:
		<input type="text" id="eventtitle" name="eventtitle" class="forminput" placeholder="ex. Monitor blood sugar">
	</label>
	<input type="submit" value="Add event">
</form>


</html>